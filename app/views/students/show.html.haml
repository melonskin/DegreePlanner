= content_for(:title, @student.firstname+" profile")

%table.table
%h2 Details about #{@student.firstname}

.row
  .col-md-5.col-md-offset-4
    %table.table
      %tr
        %th First name:
        %td= @student.firstname
      %tr
        %th Last name:
        %td= @student.lastname
      %tr
        %th Email:
        %td= @student.user.email
      %tr
        %th Is F1?:
        %td= @student.is_f1
      %tr
        %th Program:
        %td= @student.program[:name]
      %tr
        %th Beginning year:
        %td= @student.yearstart
      %tr
        %th First Semester:
        %td= @student.semstart
      %tr
        %th Expected Graduation year:
        %td= @student.yearend
      %tr
        %th Expected Graduation Semester:
        %td= @student.semend
.center
  = link_to 'Edit', edit_student_path(@student), class: "btn btn-lg btn-primary"
  = link_to 'Back to home', user_path(current_user), class: "btn btn-lg btn-primary"
