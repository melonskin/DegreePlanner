%header.navbar.navbar-fixed-top.navbar-inverse
  .container
    - if logged_in? and current_student
      = link_to "Degree Planner", user_path(current_user), id: "logo"
    - else
      = link_to "Degree Planner", root_path, id: "logo"
    %nav
      %ul.nav.navbar-nav.navbar-right
        - if logged_in? and current_student
          %li= link_to "Home", user_path(current_user)
        - else
          %li= link_to "Home", root_path
        - if logged_in?
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Account
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Profile", current_user
              %li= link_to "Edit User Profile", edit_user_path(current_user)
              - if current_student
                %li= link_to "Student info", student_path(current_student)
              %li.divider
              %li
                = link_to "Log out", logout_path, method: "delete"
        - else
          %li= link_to "Log in", login_path